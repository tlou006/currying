{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true // This allows nonstar* imports without a default export
  },
  "exclude": ["node_modules"]
}